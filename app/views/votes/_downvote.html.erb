<!-- If the user is not signed in link the arrow to sign up -->
<% if !user_signed_in? %>
  <%= link_to "", new_user_registration_path, :class => "votearrow rotate180" %>
<% else %>
  <% if current_user.voted_on_object?(voteable, voteable.class.to_s) || voteable.user == current_user %>
    <div id="arrow" style="display: inline-block;width: 15px"></div>
  <% else %>
	<%= link_to "", votes_path(:vote => { :voteable_type =>  voteable.class.to_s, :voteable_id => voteable.id, :vote_type => "Down" } ), method: :post, :class => "votearrow rotate180" %>
  <% end %>
<% end %>