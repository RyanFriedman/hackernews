<!-- If the user is not signed in link the arrow to sign up -->
<% if !user_signed_in? %>
  <%= link_to "", new_user_registration_path, :class => "votearrow rotate180" %>
<% else %>
  <% if current_user.voted_on_post?(post) || post.user == current_user %>
    <div id="arrow" style="display: inline-block;width: 15px"></div>
  <% else %>
	<%= link_to "", votes_path(:vote => { :voteable_type => "Post", :voteable_id => post.id } ), method: :post, :class => "votearrow" %>
  <% end %>
<% end %>