<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>
<table>
  <tr>
	<td>user:</td>
	<td><%= @user.username %></td>
  </tr>
  <tr>
    <td>created:</td>
 	<td><%= time_ago_in_words(@user.created_at) %> ago</td>
  </tr>
  <tr>
    <td>karma:</td>
	<td><%= @user.karma %></td>
  </tr>
  <% if user_signed_in? %>
    <% if current_user.id == params[:id].to_i %> 
      <%= render :partial => "users/edit" %>
	<% end %>
  <% else %>
    <tr>
      <td>about:</td>	
	  <td><%= @user.about %></td>
    </tr>
  <% end %>
</table>