<p>Users with the most karma</p>
<table>
  <tr>
	<th></th>
	<th></th>
	<th>Total</th>
  </tr>
<% @users.each_with_index do |user, index| %>
  <tr>
	<td><%= index + 1 %>.</td>
	<td><%= link_to(user.username, user_path(user), :class => "no-text-decoration" ) %></td>
	<td align="right"><%= user.karma %></td>
  </tr>
<% end %>
</table>