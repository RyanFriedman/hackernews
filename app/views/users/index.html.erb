<div style="padding: 0px 15px 0px 15px">
  <h4>Users with the most karma</h4>
  <table class="leaders-table">
    <tr>
	  <th></th>
	  <th></th>
	  <th>Total</th>
    </tr>
    <% @users.each_with_index do |user, index| %>
    <tr>
	  <td><%= index + 1 %>.</td>
	  <td><%= link_to(user.username, user_path(user), :class => "no-text-decoration" ) %></td>
	  <td align="right"><%= user.karma %></td>
    </tr>
    <% end %>
  </table>
</div>