<%= form_for(@user, url: user_path(@user), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <tr>
	<td>about:</td>
    <td><%= f.text_area :about, size: "100X300" %></td>
  </tr>

  <tr>
    <td>email:</td>
    <td><%= f.email_field :email, size: 100 %></td>
  </tr>
	
  <tr>
	<td><%= f.submit "Update" %></td>
  </tr>
  
  <tr>
    <td><%= link_to "Back", :back %></td>
  </tr>
<% end %>