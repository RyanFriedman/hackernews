<!-- If this is the current users post don't show an arrow -->
<% if post.user == current_user %>
  <div style="display: inline-block;width: 15px"></div>
<% end %>

<!-- If the user is not signed in link the arrow to sign up -->
<% if !user_signed_in? %>
  <%= link_to "", new_user_registration_path, :class => "votearrow" %>
<% else %>
  <% if current_user.voted_on_post?(post) %>
    <div style="display: inline-block;width: 15px"></div>
  <% else %>
	<%= link_to "", votes_path(:vote => { :voteable_type => "Post", :voteable_id => post.id } ), method: :post, :class => "votearrow" %>
  <% end %>
<% end %>