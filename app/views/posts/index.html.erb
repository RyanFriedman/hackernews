<div id="posts-container">
  <% if current_page?(:action => 'index') && !user_signed_in? %>
    <div class="alert alert-success fade in" id="site-description">
      <!-- <button class="close" data-dismiss="alert">Ã—</button> -->
      <p style="font-weight:bold; text-align:center">FilmHatch is a place for filmmakers to share projects and discuss news from around the film industry.</p>
    </div>
  <% end %>
  <h3><%= @title %></h3>
  <p><%= @description if @description %></p>

  <ul id="posts">
  <% @posts.each_with_index do |post, index| %>
    <li class="post">
	  <div style="float:left"><%= index + 1 %>.</div>
	  <%= render :partial => "post", locals: { post: post } %>
    </li>
    <% end %>
  </ul>

  <%= will_paginate @posts %>
</div>

<% if current_page?(:action => 'index') && !user_signed_in? %>
  <script>
	$(document).ready(function() {
	  var firstVoteArrow = $(".votearrow").first();
	  firstVoteArrow.attr("data-toggle", "tooltip");
	  firstVoteArrow.attr("data-placement", "top");
	  firstVoteArrow.attr("title", "Click the arrows to upvote the posts you like");
	  $('[data-toggle=tooltip]').tooltip('show');
	});
  </script> 
<% end %>
